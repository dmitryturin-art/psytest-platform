# PsyTest Platform Configuration

# Database configuration
DB_HOST=localhost
DB_NAME=psytest
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application settings
APP_NAME=PsyTest
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true

# Session settings
SESSION_TTL_DAYS=30
SESSION_TOKEN_LENGTH=32

# Security
CSRF_ENABLED=true
ENCRYPTION_KEY=

# YooMoney payment settings
YOOMONEY_SHOP_ID=
YOOMONEY_API_KEY=
YOOMONEY_WEBHOOK_SECRET=

# OpenRouter AI settings
OPENROUTER_API_KEY=
OPENROUTER_MODEL=deepseek/deepseek-chat

# Email settings (for sending interpretations)
MAIL_FROM=noreply@psytest.local
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_ENCRYPTION=tls

# File storage
PDF_STORAGE_PATH=/var/www/psytest/storage/pdfs
UPLOAD_MAX_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/psytest/storage/logs
